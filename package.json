{
  "name": "template-loop-card",
  "version": "1.0.0",
  "description": "A Home Assistant custom card that loops over template-generated lists",
  "type": "module",
  "main": "dist/template-loop-card.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "custom-card",
    "template",
    "loop"
  ],
  "author": "Sebastiaan Pasma",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "rollup": "^4.6.1",
    "@rollup/plugin-terser": "^0.4.4",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "lit": "^3.1.0",
    "custom-card-helpers": "^1.9.0"
  }
}
